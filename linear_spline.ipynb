   "source": [
    "X = [1,2,3,4]\n",
    "Y = [2,4,1,3]\n",
    "\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "id": "e21bc25e",
   "metadata": {},
   "outputs": [],
   "source": [
    "def linear_spline(X,Y, xp):\n",
    "    for i in range(len(X)-1):\n",
    "        if X[i] <= xp <= X[i+1]:\n",
    "            s1 = Y[i+1] + ((Y[i+1]-Y[i])*(xp-X[i+1]))/(X[i+1]-X[i])\n",
    "\n",
    "            return s1\n"
   ]
  },
